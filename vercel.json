{
  "version": 2,
  "functions": {
    "api/chatbot.js": {
      "maxDuration": 30
    },
    "api/init.js": {
      "maxDuration": 30
    },
    "api/resources.js": {
      "maxDuration": 30
    },
    "api/saveMessage.js": {
      "maxDuration": 10,
      "regions": ["fra1"]  // use region closest to your Upstash KV (eu-central-1)
    },
    "api/conversations.js": {
      "maxDuration": 10,
      "regions": ["fra1"]
    },
    "api/conversations/[visitorID].js": {
      "maxDuration": 10,
      "regions": ["fra1"]
    },
    "api/debug-kv.js": {
      "maxDuration": 10,
      "regions": ["fra1"]
    },
    "api/clear-kv.js": {
      "maxDuration": 10,
      "regions": ["fra1"]
    }
  },
  "routes": [
    { "src": "/api/chatbot", "dest": "/api/chatbot.js" },
    { "src": "/api/init", "dest": "/api/init.js" }
  ]
}