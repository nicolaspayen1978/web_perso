{
  "version": 2,
  "functions": {
    "api/chatbot.js": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "VERCEL_KV_REST_API_URL": "@nicoai-resources",
      "VERCEL_KV_REST_API_TOKEN": "@nicoai-resources"
    },
    "commands": [
      "node scripts/uploadResources.js"
    ]
  },
  "routes": [
    {
      "src": "/api/chatbot",
      "dest": "/api/chatbot.js"
    }
  ]
}